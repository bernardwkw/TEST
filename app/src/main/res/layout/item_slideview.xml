<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/root">

                <LinearLayout
                    android:padding="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <TextView
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/slideview_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="LPI : -"
                            android:textStyle="bold"
                            android:textSize="@dimen/medium_text" />

                        <my.com.sains.teams.slider.SlideView
                            android:id="@+id/slider_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:elevation="@dimen/small_elevation"
                            app:buttonBackgroundColor="@android:color/white"
                            app:buttonImage="@drawable/ic_thumb"
                            app:buttonImageDisabled="@drawable/ic_settings_grey600_24dp"
                            app:slideText="Fail"
                            app:slideText2="Pass" />

                        <TextView
                            android:layout_marginTop="30dp"
                            android:text="Results : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:layout_marginTop="@dimen/layout_margin"
                            android:id="@+id/result_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                </LinearLayout>

        </LinearLayout>
</layout>

