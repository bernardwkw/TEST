<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout

        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/lpi_chk_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="LPI : -"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium_text" />

                <my.com.sains.teams.slider.SlideView
                    android:id="@+id/lpi_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:elevation="@dimen/small_elevation"
                    app:buttonBackgroundColor="@android:color/white"
                    app:buttonImage="@drawable/ic_thumb"
                    app:buttonImageDisabled="@drawable/ic_settings_grey600_24dp"
                    app:slideText="Fail"
                    app:slideText2="Pass" />

                <TextView
                    android:id="@+id/pm_chk_tv"
                    android:elevation="@dimen/medium_elevation"
                    android:layout_marginTop="@dimen/dialog_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Property Mark : -"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium_text" />

                <my.com.sains.teams.slider.SlideView
                    android:id="@+id/pm_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:elevation="@dimen/small_elevation"
                    app:buttonBackgroundColor="@android:color/white"
                    app:buttonImage="@drawable/ic_thumb"
                    app:buttonImageDisabled="@drawable/ic_settings_grey600_24dp"
                    app:slideText="Fail"
                    app:slideText2="Pass" />

                <TextView
                    android:id="@+id/jh_mark_chk_tv"
                    android:layout_marginTop="@dimen/dialog_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="JH Mark : -"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium_text" />

                <my.com.sains.teams.slider.SlideView
                    android:id="@+id/jh_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:elevation="@dimen/small_elevation"
                    app:buttonBackgroundColor="@android:color/white"
                    app:buttonImage="@drawable/ic_thumb"
                    app:buttonImageDisabled="@drawable/ic_settings_grey600_24dp"
                    app:slideText="Fail"
                    app:slideText2="Pass" />

                <TextView
                    android:id="@+id/spec_chk_tv"
                    android:layout_marginTop="@dimen/dialog_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Species: -"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium_text" />

                <my.com.sains.teams.slider.SlideView
                    android:id="@+id/spec_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:elevation="@dimen/small_elevation"
                    app:buttonBackgroundColor="@android:color/white"
                    app:buttonImage="@drawable/ic_thumb"
                    app:buttonImageDisabled="@drawable/ic_settings_grey600_24dp"
                    app:slideText="Fail"
                    app:slideText2="Pass" />

                <TextView
                    android:id="@+id/diameter_chk_tv"
                    android:layout_marginTop="@dimen/dialog_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Diameter : -"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium_text" />

                <my.com.sains.teams.slider.SlideView
                    android:id="@+id/diameter_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:elevation="@dimen/small_elevation"
                    app:buttonBackgroundColor="@android:color/white"
                    app:buttonImage="@drawable/ic_thumb"

                    app:buttonImageDisabled="@drawable/ic_settings_grey600_24dp"
                    app:slideText="Fail"
                    app:slideText2="Pass" />

                <TextView
                    android:id="@+id/length_chk_tv"
                    android:layout_marginTop="@dimen/dialog_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Length : -"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium_text" />

                <my.com.sains.teams.slider.SlideView
                    android:id="@+id/length_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:elevation="@dimen/small_elevation"
                    android:layout_marginBottom="5dp"
                    app:buttonBackgroundColor="@android:color/white"
                    app:buttonImage="@drawable/ic_thumb"
                    app:buttonImageDisabled="@drawable/ic_settings_grey600_24dp"
                    app:slideText="Fail"
                    app:slideText2="Pass" />


                <TextView
                    android:layout_marginTop="@dimen/layout_margin"
                    android:text="Remarks :"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/remark_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:lines="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:scrollHorizontally="false" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>

