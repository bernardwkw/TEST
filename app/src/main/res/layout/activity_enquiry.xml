<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:background="@drawable/background_color"
        tools:context="my.com.sains.teams.activities.InspectionActivity">

        <LinearLayout
            android:background="@drawable/panel_all_white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="@dimen/small_elevation">


            <android.support.design.widget.TextInputEditText
                android:inputType="textCapCharacters"
                android:id="@+id/lpi_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:hint="LPI"
                android:autofillHints="hint2" />

            <android.support.design.widget.TextInputEditText
                android:inputType="textCapCharacters"
                android:id="@+id/pm_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:hint="PM"
                android:autofillHints="hint2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.2">

                <ImageButton
                    android:padding="7dp"
                    android:background="@drawable/oval_blue_selector"
                    android:onClick="search"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    android:elevation="@dimen/medium_elevation"
                    android:src="@drawable/ic_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.1">

                <ImageButton
                    android:padding="7dp"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:onClick="qrscan"
                    android:elevation="@dimen/medium_elevation"
                    android:text="Qr Scan"
                    android:scaleType="center"
                    android:background="@drawable/oval_maroon_selector"
                    android:src="@drawable/ic_scan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:background="@drawable/panel_all_white"
                    android:elevation="@dimen/small_elevation"
                    android:orientation="horizontal"
                    android:padding="@dimen/layout_padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/camp_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="@dimen/large_text" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Camp"
                            android:textSize="@dimen/small_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/coupe_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="@dimen/large_text" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Coupe"
                            android:textSize="@dimen/small_text" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/block_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="@dimen/large_text" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Block"
                            android:textSize="@dimen/small_text" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/layout_margin" android:background="@drawable/panel_all_white"
                    android:elevation="@dimen/small_elevation"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_padding">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/medium_text"
                            android:text="Batch No."
                            android:layout_weight="1.4"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/medium_text"
                            android:text=":"
                            android:layout_weight="2.2"/>

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/batch_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/medium_text"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/medium_text"
                            android:text="Ref No."
                            android:layout_weight="1.4"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/medium_text"
                            android:text=":"
                            android:layout_weight="2.2"/>

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/ref_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/medium_text"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/medium_text"
                            android:text="Licensee"
                            android:layout_weight="1.4"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/medium_text"
                            android:text=":"
                            android:layout_weight="2.2"/>

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/licensee_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/medium_text"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/medium_text"
                            android:text="Name"
                            android:layout_weight="1.4"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/medium_text"
                            android:text=":"
                            android:layout_weight="2.2"/>

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/lic_name_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/medium_text"
                            android:layout_weight="1"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/result_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/result_text_tv"
                        android:text="Inspection : "
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/layout_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/inspection_linearLayout"
                        android:visibility="gone"
                        android:elevation="@dimen/small_elevation"
                        android:background="@drawable/panel_all_white"
                        android:layout_margin="@dimen/layout_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:background="@drawable/info_blue"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/username_tv"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_gravity="center"
                                android:text="-"
                                android:textColor="@color/whiteText"
                                android:textStyle="bold"
                                android:textSize="@dimen/medium_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginBottom="5dp"
                                android:layout_gravity="center"
                                android:text="Inspect by "
                                android:textColor="@color/whiteText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/date_tv"
                                android:gravity="center"
                                android:text="-"
                                android:textSize="@dimen/small_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/location_ll"
                        android:visibility="gone"
                        android:background="@drawable/btn_selector_white"
                        android:elevation="@dimen/small_elevation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/layout_margin"
                        android:paddingBottom="@dimen/layout_margin"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location"/>

                        <LinearLayout
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lat_tv"
                                android:visibility="visible"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="@dimen/medium_text"
                                android:translationX="@dimen/transition_x" />

                            <TextView
                                android:visibility="visible"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:text="\u00B0 N"
                                android:textSize="@dimen/medium_text"
                                android:translationX="@dimen/transition_x" />

                            <TextView
                                android:id="@+id/long_tv"
                                android:visibility="visible"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="@dimen/medium_text"
                                android:translationX="@dimen/transition_x" />

                            <TextView
                                android:visibility="visible"
                                android:clickable="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="\u00B0 E"
                                android:textSize="@dimen/medium_text"
                                android:translationX="@dimen/transition_x" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lpi_chk_ll"
                        android:background="@drawable/panel_all_white"
                        android:elevation="@dimen/small_elevation"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/layout_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lpi_tittle"
                            android:gravity="center"
                            android:text="LPI"
                            android:textColor="@color/dark_dark"
                            android:background="@drawable/info_white"
                            android:textSize="@dimen/medium_text"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/lpi_tv"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/small_elevation"
                            android:padding="@dimen/layout_padding"
                            android:text="A44451"
                            android:textStyle="bold"
                            android:textSize="@dimen/medium_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pm_ll"
                        android:background="@drawable/panel_all_white"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/layout_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/pm_tittle"
                            android:gravity="center"
                            android:text="PM"
                            android:textColor="@color/dark_dark"
                            android:textSize="@dimen/medium_text"
                            android:background="@drawable/info_white"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/pm_tv"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/layout_padding"
                            android:text="KBX"
                            android:textStyle="bold"
                            android:textSize="@dimen/medium_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/jh_ll"
                        android:elevation="@dimen/small_elevation"
                        android:background="@drawable/btn_selector_white"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/layout_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/jh_tittle"
                            android:gravity="center"
                            android:text="JH Mark"
                            android:textColor="@color/dark_dark"
                            android:textSize="@dimen/medium_text"
                            android:background="@drawable/info_white"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/jh_mark_tv"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/layout_padding"
                            android:text="KBX"
                            android:textStyle="bold"
                            android:textSize="@dimen/medium_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/species_chk_ll"
                        android:background="@drawable/btn_selector_white"
                        android:elevation="@dimen/small_elevation"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/layout_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/species_tittle"
                            android:gravity="center"
                            android:text="Species"
                            android:textColor="@color/dark_dark"
                            android:textSize="@dimen/medium_text"
                            android:background="@drawable/info_white"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/species_tv"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/small_elevation"
                            android:padding="@dimen/layout_padding"
                            android:text="UBAH"
                            android:textStyle="bold"
                            android:textSize="@dimen/medium_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/diameter_chk_ll"
                        android:background="@drawable/btn_selector_white"
                        android:elevation="@dimen/small_elevation"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/layout_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/diameter_tittle"
                            android:gravity="center"
                            android:text="Diameter"
                            android:textColor="@color/dark_dark"
                            android:textSize="@dimen/medium_text"
                            android:background="@drawable/info_white"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/diameter_tv"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/small_elevation"
                            android:padding="@dimen/layout_padding"
                            android:text="20"
                            android:textStyle="bold"
                            android:textSize="@dimen/medium_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/length_chk_ll"
                        android:background="@drawable/btn_selector_white"
                        android:elevation="@dimen/small_elevation"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/length_tittle"
                            android:gravity="center"
                            android:text="Length"
                            android:textColor="@color/dark_dark"
                            android:textSize="@dimen/medium_text"
                            android:background="@drawable/info_white"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/length_tv"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/small_elevation"
                            android:padding="@dimen/layout_padding"
                            android:text="20"
                            android:textStyle="bold"
                            android:textSize="@dimen/medium_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/remarks_chk_ll"
                        android:background="@drawable/btn_selector_white"
                        android:elevation="@dimen/small_elevation"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:layout_marginBottom="@dimen/layout_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/remarks_tittle"
                            android:gravity="center"
                            android:text="Remarks"
                            android:textColor="@color/whiteText"
                            android:textSize="@dimen/medium_text"
                            android:background="@drawable/info_orange"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/remarks_tv"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/small_elevation"
                            android:padding="@dimen/layout_padding"
                            android:drawableEnd="@drawable/ic_edit"
                            android:text="-"
                            android:textSize="@dimen/small_text" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>




